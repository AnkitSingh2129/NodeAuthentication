<link rel="stylesheet" href="/css/home.css">
<div class="heading">
    <h1>
        Codeial / <%= title %>
    </h1>
</div>

<section id="feed-posts">
    <h4>Posts</h4>
    <% if (locals.user) { %> 
    <form action="/posts/create" method="post" id="new-post-form">
        <textarea name="content" cols="30" rows="4" placeholder="Type Here...."></textarea>
        <input type="submit" value="Post">
    </form>
    <% } %>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>

                <li>
                    <h3><%= post.content %></h3>
                    <!-- <br> -->
                    <small>
                        <%= post.user.name %>
                    </small>
                </li>

            <%} %>
        </ul>
    </div>
</section>
