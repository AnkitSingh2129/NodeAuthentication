<section class="home">
    <header>
        <h2 class="logo">logo</h2>
        <nav class="navigation">
            <a href="#">Home</a>
            <a href="#">About</a>
            <a href="#">Contact</a>
            <a href="/users/sign-out">Sign-Out</a>
            <button class="btnUpdate-popup">Profile</button>
        </nav>
    </header>

    <div class="wrapper">
        <span class="icon-close"><i class="fa fa-times" aria-hidden="true"></i></span>
        <div class="wrapper-box login">
            <h2>Profile Details</h2>
            <div class="profile-data">
                <div class="user-img">
                    <img src="<%= user.avatar %>" alt="<%= user.name %>">
                </div>
                <div class="user-name">
                    <p><span><i class="fa fa-user" aria-hidden="true"></i></span><%= user.name %></p>
                </div>
                <div class="user-email">
                    <p><span><i class="fa fa-envelope" aria-hidden="true"></i></span><%= user.email %></p>
                </div>

                <div class="profile-update">
                    <p> Want to Change your details?
                        <a href="#" class="register-link">Update</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="wrapper-box register">
            <h2>Update</h2>
            <form action="/users/update/<%= user.id %>" enctype="multipart/form-data" method="post">
                <div class="input-box">
                    <span class="icon"><i class="fa fa-user" aria-hidden="true"></i></span>
                    <input type="text" name="name">
                    <label for="">Name</label>
                </div>
                <div class="input-box">
                    <span class="icon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                    <input type="email" name="email" id="" >
                    <label for="">Email</label>
                </div>
                <div class="input-box">
                    <span class="icon"><i class="fa fa-lock" aria-hidden="true"></i></span>
                    <input type="password" name="password" id="" >
                    <label for="">Password</label>
                </div>
                <div class="file-box">
                    <input type="file" name="avatar" id="">
                </div>
                <button type="submit" class="btn">Update</button>
                <div class="profile-update">
                    <p> See Your Profile
                        <a href="#" class="login-link">Profile Details</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

<script src="/js/home.js"></script>
